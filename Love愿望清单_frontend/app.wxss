/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page {
  --primary-color: #FF69B4;
  --primary-gradient: linear-gradient(45deg, #FF69B4, #FF1493);
  --text-color: #333333;
  --desc-color: #666666;
  --border-color: #EEEEEE;
  --tag-color: #FF69B4;
  --bg-color: #f7f7f7;
  
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
  font-size: 28rpx;
  color: var(--text-color);
  background: var(--bg-color);
}

/* 常用flex布局 */
.flex {
  display: flex;
}

.flex-col {
  display: flex;
  flex-direction: column; 
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

/* 常用外观样式 */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.05);
}

.tag {
  font-size: 24rpx;
  color: var(--tag-color);
  background: rgba(255, 105, 180, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.btn {
  background: var(--primary-gradient);
  color: #fff;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.btn::after {
  border: none;
}

.btn-outline {
  background: #fff;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

/* 文字样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
}

.desc {
  font-size: 26rpx;
  color: var(--desc-color);
}

/* 1px 边框 */
.border-bottom {
  position: relative;
}

.border-bottom::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background: var(--border-color);
  transform: scaleY(0.5);
} 

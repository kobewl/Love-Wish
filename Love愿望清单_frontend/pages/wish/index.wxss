.wish-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: env(safe-area-inset-bottom);
}

.wish-list {
  position: relative;
  z-index: 2;
  padding: 20rpx 30rpx;
  margin-top: -60rpx;
}

.empty-box {
  padding: 120rpx 0;
  text-align: center;
}

.empty-img {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--desc-color);
}

.wish-item {
  margin-bottom: 24rpx;
}

.wish-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.type-tag {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.type-tag.PRIVATE {
  background: rgba(255, 105, 180, 0.1);
  color: var(--primary-color);
}

.type-tag.SHARED {
  background: rgba(64, 158, 255, 0.1);
  color: #409eff;
}

.type-tag.SURPRISE {
  background: rgba(103, 194, 58, 0.1);
  color: #67c23a;
}

.status {
  font-size: 24rpx;
  color: var(--desc-color);
}

.date {
  font-size: 24rpx;
  color: var(--desc-color);
}

.wish-content {
  margin-bottom: 20rpx;
}

.wish-content .title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.wish-content .desc {
  font-size: 28rpx;
  color: var(--desc-color);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.progress-box {
  flex: 1;
  margin-right: 32rpx;
}

.progress-text {
  font-size: 24rpx;
  color: var(--desc-color);
  margin-bottom: 8rpx;
  display: block;
}

.progress-bar {
  height: 8rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  background: var(--primary-gradient);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.btn-sm {
  padding: 12rpx 32rpx;
  font-size: 24rpx;
}

.fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: var(--primary-gradient);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 105, 180, 0.3);
}

.bg-gradient {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  background: linear-gradient(135deg, #ff69b4, #ffb6c1);
  border-radius: 0 0 30rpx 30rpx;
  z-index: 1;
  animation: gradientMove 8s ease infinite;
  background-size: 200% 200%;
}

@keyframes gradientMove {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.header {
  position: relative;
  z-index: 2;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.title-section {
  color: #fff;
}

.main-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.sub-title {
  font-size: 28rpx;
  opacity: 0.9;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.add-btn-wrapper {
  margin-top: 10rpx;
}

.add-btn {
  width: 90rpx;
  height: 90rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  transition: all 0.3s;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.add-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.wish-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
  border: 2rpx solid rgba(255, 105, 180, 0.1);
}

.wish-card:active {
  transform: scale(0.98);
}

.wish-card:hover {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.wish-card.completed {
  opacity: 0.8;
  background: #fafafa;
}

.wish-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.wish-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  background: rgba(255, 105, 180, 0.1);
  backdrop-filter: blur(4px);
  color: #ff69b4;
}

.wish-status.completed {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.wish-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin: 16rpx 0;
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 16rpx 0;
}

.wish-desc text {
  flex: 1;
}

.wish-image {
  width: 100%;
  height: 320rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin: 20rpx 0;
  background: #f5f5f5;
}

.wish-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.wish-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
}

.wish-time {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.wish-actions {
  display: flex;
  gap: 32rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.action-btn:active {
  opacity: 0.8;
}

.action-btn::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.3s, height 0.3s;
}

.action-btn:active::after {
  width: 200rpx;
  height: 200rpx;
  opacity: 0;
}

.action-btn.complete {
  color: #52c41a;
}

.action-btn.edit {
  color: #1890ff;
}

.action-btn.delete {
  color: #ff4d4f;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 120rpx;
}

.empty-image {
  width: 360rpx;
  height: 360rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  text-align: center;
}

.empty-title {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  justify-content: center;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  display: flex;
  align-items: center;
  gap: 12rpx;
  justify-content: center;
}

.add-first-btn {
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #ff69b4, #ffb6c1);
  color: #fff;
  padding: 24rpx 48rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 6rpx 20rpx rgba(255, 105, 180, 0.3);
  transition: all 0.3s;
}

.add-first-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.popup-content {
  padding: 40rpx 30rpx;
  background: #fff;
  animation: slideUp 0.3s ease-out;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.popup-title-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.popup-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
}

.popup-subtitle {
  font-size: 26rpx;
  color: #999;
}

.popup-close {
  padding: 10rpx;
}

.form-content {
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  position: relative;
}

.form-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.form-label text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s;
}

.form-input:focus {
  border-color: #ff69b4;
  background: #fff;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s;
}

.form-textarea:focus {
  border-color: #ff69b4;
  background: #fff;
}

.input-count {
  position: absolute;
  right: 24rpx;
  bottom: -30rpx;
  font-size: 24rpx;
  color: #999;
}

.upload-content {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-preview {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  background: #fff;
}

.image-preview image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-image {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 44rpx;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4px);
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background: #fff;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  color: #999;
  font-size: 26rpx;
  transition: all 0.3s;
}

.upload-btn:active {
  background: #f5f5f5;
}

.popup-footer {
  display: flex;
  gap: 24rpx;
  padding-top: 20rpx;
}

.footer-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 30rpx;
  transition: all 0.3s;
}

.footer-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: linear-gradient(135deg, #ff69b4, #ffb6c1);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(255, 105, 180, 0.3);
}

/* 输入框placeholder样式 */
.form-input::placeholder,
.form-textarea::placeholder {
  color: #999;
}

/* 添加动画效果 */
@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 添加波纹效果 */
.form-input:focus,
.form-textarea:focus {
  box-shadow: 0 0 0 4rpx rgba(255, 105, 180, 0.1);
}

/* 优化图标样式 */
.van-icon {
  vertical-align: middle;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer-btn:active .van-icon {
  transform: scale(1.1);
}

/* 自定义van-button样式 */
.van-button--primary {
  background: linear-gradient(135deg, #ff69b4, #ffb6c1) !important;
  border: none !important;
  border-radius: 40rpx !important;
}

.van-field__label {
  color: #333 !important;
  font-weight: 500 !important;
}

.van-cell {
  padding: 20rpx 0 !important;
}

.van-field__input {
  color: #333 !important;
}

/* 添加图标悬停效果 */
.action-btn:hover .van-icon {
  transform: scale(1.1);
}

/* 添加卡片阴影效果 */
.wish-card {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid rgba(255, 105, 180, 0.1);
}

.wish-card:hover {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 优化状态标签 */
.wish-status {
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  background: rgba(255, 105, 180, 0.1);
  backdrop-filter: blur(4px);
}

.wish-status.completed {
  background: rgba(82, 196, 26, 0.1);
}

/* 添加图片加载动画 */
.wish-image image {
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 优化按钮动画 */
.action-btn {
  position: relative;
  overflow: hidden;
}

.action-btn::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.3s, height 0.3s;
}

.action-btn:active::after {
  width: 200rpx;
  height: 200rpx;
  opacity: 0;
}

/* 优化图标间距和对齐 */
.van-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 添加渐变背景动画 */
.bg-gradient {
  animation: gradientMove 8s ease infinite;
  background-size: 200% 200%;
}

@keyframes gradientMove {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.title-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.subtitle-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 8rpx;
}

.wish-title-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.wish-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.wish-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.empty-title,
.empty-desc {
  display: flex;
  align-items: center;
  gap: 12rpx;
  justify-content: center;
}

.popup-title-row,
.popup-subtitle-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

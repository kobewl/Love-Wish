/* 背景动画效果 */
.bg-bubbles {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
}

.bubble {
  position: absolute;
  bottom: -100rpx;
  background: radial-gradient(
    circle at 30% 30%,
    rgba(255, 255, 255, 0.8),
    rgba(255, 255, 255, 0.1)
  );
  border-radius: 50%;
  backdrop-filter: blur(2px);
  animation: rise 12s infinite ease-in;
  opacity: 0;
}

.bubble:nth-child(1) {
  left: 10%;
  width: 60rpx;
  height: 60rpx;
  animation-delay: 0s;
}
.bubble:nth-child(2) {
  left: 20%;
  width: 40rpx;
  height: 40rpx;
  animation-delay: 2s;
}
.bubble:nth-child(3) {
  left: 35%;
  width: 65rpx;
  height: 65rpx;
  animation-delay: 4s;
}
.bubble:nth-child(4) {
  left: 50%;
  width: 45rpx;
  height: 45rpx;
  animation-delay: 6s;
}
.bubble:nth-child(5) {
  left: 65%;
  width: 55rpx;
  height: 55rpx;
  animation-delay: 8s;
}
.bubble:nth-child(6) {
  left: 80%;
  width: 35rpx;
  height: 35rpx;
  animation-delay: 10s;
}
.bubble:nth-child(7) {
  left: 90%;
  width: 50rpx;
  height: 50rpx;
  animation-delay: 12s;
}
.bubble:nth-child(8) {
  left: 95%;
  width: 45rpx;
  height: 45rpx;
  animation-delay: 14s;
}

@keyframes rise {
  0% {
    transform: translateY(0) scale(1) rotate(0);
    opacity: 0;
  }
  50% {
    opacity: 0.6;
    transform: translateY(-400rpx) scale(1.2) rotate(180deg);
  }
  100% {

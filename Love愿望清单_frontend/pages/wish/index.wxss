.wish-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: env(safe-area-inset-bottom);
}

.wish-list {
  position: relative;
  z-index: 2;
  padding: 20rpx 30rpx;
  margin-top: -60rpx;
}

.empty-box {
  padding: 120rpx 0;
  text-align: center;
}

.empty-img {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--desc-color);
}

.wish-item {
  margin-bottom: 24rpx;
}

.wish-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.type-tag {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.type-tag.PRIVATE {
  background: rgba(255, 105, 180, 0.1);
  color: var(--primary-color);
}

.type-tag.SHARED {
  background: rgba(64, 158, 255, 0.1);
  color: #409eff;
}

.type-tag.SURPRISE {
  background: rgba(103, 194, 58, 0.1);
  color: #67c23a;
}

.status {
  font-size: 24rpx;
  color: var(--desc-color);
}

.date {
  font-size: 24rpx;
  color: var(--desc-color);
}

.wish-content {
  position: relative;
}

.wish-content .title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.wish-content .desc {
  font-size: 28rpx;
  color: var(--desc-color);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.progress-box {
  flex: 1;
  margin-right: 32rpx;
}

.progress-text {
  font-size: 24rpx;
  color: var(--desc-color);
  margin-bottom: 8rpx;
  display: block;
}

.progress-bar {
  height: 8rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  background: var(--primary-gradient);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.btn-sm {
  padding: 12rpx 32rpx;
  font-size: 24rpx;
}

.fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: var(--primary-gradient);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 105, 180, 0.3);
}

.bg-container {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.bg-gradient {
  height: 360rpx;
  background: linear-gradient(135deg, #ff69b4 0%, #ff8da1 50%, #ffb6c1 100%);
  position: relative;
  overflow: hidden;
  transform: skewY(-3deg) translateY(-40rpx);
  transform-origin: 0;
}

.bg-pattern {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: linear-gradient(
      45deg,
      rgba(255, 255, 255, 0.1) 25%,
      transparent 25%
    ),
    linear-gradient(-45deg, rgba(255, 255, 255, 0.1) 25%, transparent 25%),
    linear-gradient(45deg, transparent 75%, rgba(255, 255, 255, 0.1) 75%),
    linear-gradient(-45deg, transparent 75%, rgba(255, 255, 255, 0.1) 75%);
  background-size: 40rpx 40rpx;
  background-position: 0 0, 0 20rpx, 20rpx -20rpx, -20rpx 0px;
  animation: patternMove 20s linear infinite;
  opacity: 0.5;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(
    circle at 50% 0%,
    rgba(255, 255, 255, 0.2),
    transparent 70%
  );
  mix-blend-mode: overlay;
}

.header {
  position: relative;
  z-index: 2;
  padding: 40rpx 30rpx 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.title-section {
  animation: fadeInUp 0.6s ease-out;
  transform: skewY(3deg);
  padding-top: 20rpx;
}

.title-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.title-icon {
  position: relative;
  width: 88rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: iconFloat 3s ease-in-out infinite;
}

.icon-glow {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 44rpx;
  background: radial-gradient(
    circle at center,
    rgba(255, 255, 255, 0.8),
    transparent 70%
  );
  filter: blur(5px);
  animation: glowPulse 2s ease-in-out infinite;
}

.main-title {
  position: relative;
  margin-bottom: 16rpx;
}

.title-text {
  font-size: 64rpx;
  font-weight: 800;
  color: #ffffff;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3), 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 4rpx;
  background: linear-gradient(to right, #ffffff, rgba(255, 255, 255, 0.95));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.title-glow {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.6),
    transparent
  );
  filter: blur(8px);
  transform: skewX(-15deg);
  animation: titleGlow 3s ease-in-out infinite;
}

.subtitle-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  opacity: 0.9;
}

.sub-title {
  position: relative;
  display: inline-block;
}

.sub-title text {
  font-size: 36rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.98);
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3), 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 2rpx;
}

.subtitle-line {
  position: absolute;
  bottom: -8rpx;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.6);
  transform-origin: left;
  animation: lineGrow 3s ease-in-out infinite;
}

.add-btn-wrapper {
  margin-top: 10rpx;
}

.add-btn {
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  animation: fadeInDown 0.6s ease-out;
  transition: all 0.3s;
}

.add-btn-hover {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.wish-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
  border: 2rpx solid rgba(255, 105, 180, 0.1);
  position: relative;
  overflow: hidden;
  animation: slideIn 0.6s ease-out;
}

.card-hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.wish-card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(to bottom, #ff69b4, #ffb6c1);
  border-radius: 3rpx;
}

.wish-card.completed::before {
  background: linear-gradient(to bottom, #52c41a, #95de64);
}

.wish-title-wrapper {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.wish-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 105, 180, 0.1);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s;
}

.wish-card:hover .wish-icon {
  transform: scale(1.05) rotate(5deg);
}

.wish-info {
  flex: 1;
}

.wish-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #222222;
  line-height: 1.5;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.wish-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.wish-date {
  font-size: 28rpx;
  font-weight: 500;
  color: #555555;
}

.wish-status {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 24rpx;
  background: rgba(255, 105, 180, 0.15);
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #ff4d8c;
  text-shadow: 0 1rpx 2rpx rgba(255, 105, 180, 0.1);
  transition: all 0.3s;
}

.wish-status.completed {
  background: rgba(7, 193, 96, 0.15);
  color: #06ad54;
}

.wish-body {
  margin: 20rpx 0;
}

.wish-desc {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.8;
  margin: 20rpx 0;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

.wish-image {
  width: 100%;
  height: 320rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #f5f5f5;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.wish-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: all 0.3s;
  backdrop-filter: blur(4px);
}

.wish-image:hover .image-overlay {
  opacity: 1;
}

.wish-image:hover image {
  transform: scale(1.05);
}

.wish-footer {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
}

.wish-actions {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.action-btn {
  flex: 1;
  height: 76rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 36rpx;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.btn-hover {
  opacity: 0.8;
  transform: scale(0.98);
}

.action-btn.complete {
  background: rgba(255, 105, 180, 0.1);
  color: #ff69b4;
}

.action-btn.completed {
  background: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

.action-btn.edit {
  background: rgba(24, 144, 255, 0.1);
  color: #1890ff;
}

.action-btn.delete {
  background: rgba(255, 77, 79, 0.1);
  color: #ff4d4f;
}

.action-divider {
  width: 2rpx;
  height: 32rpx;
  background: #f0f0f0;
}

/* 优化空状态样式 */
.empty-container {
  padding: 120rpx 40rpx;
  text-align: center;
  animation: fadeIn 0.6s ease-out;
}

.empty-image {
  width: 280rpx;
  height: 280rpx;
  margin-bottom: 40rpx;
  animation: float 3s ease-in-out infinite;
}

.empty-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #222222;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.empty-desc {
  font-size: 32rpx;
  color: #444444;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.add-first-btn {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #ff69b4, #ffb6c1);
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(255, 105, 180, 0.3);
  transition: all 0.3s;
}

.popup-content {
  padding: 40rpx 30rpx;
  background: #fff;
  animation: slideUp 0.3s ease-out;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.popup-title-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.popup-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #222222;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.popup-subtitle {
  font-size: 32rpx;
  color: #444444;
  margin-top: 12rpx;
}

.popup-close {
  padding: 10rpx;
}

.form-content {
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  position: relative;
}

.form-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.form-label text {
  font-size: 34rpx;
  font-weight: 600;
  color: #222222;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 34rpx;
  color: #222222;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s;
}

.form-input:focus {
  border-color: #ff69b4;
  background: #fff;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 34rpx;
  color: #222222;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s;
}

.form-textarea:focus {
  border-color: #ff69b4;
  background: #fff;
}

.input-count {
  position: absolute;
  right: 24rpx;
  bottom: -30rpx;
  font-size: 24rpx;
  color: #999;
}

.upload-content {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-preview {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  background: #fff;
}

.image-preview image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-image {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 44rpx;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4px);
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background: #fff;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  color: #999;
  font-size: 26rpx;
  transition: all 0.3s;
}

.upload-btn:active {
  background: #f5f5f5;
}

.popup-footer {
  display: flex;
  gap: 24rpx;
  padding-top: 20rpx;
}

.footer-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 30rpx;
  transition: all 0.3s;
}

.footer-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: linear-gradient(135deg, #ff69b4, #ffb6c1);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(255, 105, 180, 0.3);
}

/* 输入框placeholder样式 */
.form-input::placeholder,
.form-textarea::placeholder {
  color: #999;
}

/* 添加动画效果 */
@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 添加波纹效果 */
.form-input:focus,
.form-textarea:focus {
  box-shadow: 0 0 0 4rpx rgba(255, 105, 180, 0.1);
}

/* 优化图标样式 */
.van-icon {
  vertical-align: middle;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer-btn:active .van-icon {
  transform: scale(1.1);
}

/* 自定义van-button样式 */
.van-button--primary {
  background: linear-gradient(135deg, #ff69b4, #ffb6c1) !important;
  border: none !important;
  border-radius: 40rpx !important;
}

.van-field__label {
  color: #333 !important;
  font-weight: 500 !important;
}

.van-cell {
  padding: 20rpx 0 !important;
}

.van-field__input {
  color: #333 !important;
}

/* 添加图标悬停效果 */
.action-btn:hover .van-icon {
  transform: scale(1.1);
}

/* 添加卡片阴影效果 */
.wish-card {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid rgba(255, 105, 180, 0.1);
}

.wish-card:hover {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 优化状态标签 */
.wish-status {
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  background: rgba(255, 105, 180, 0.1);
  backdrop-filter: blur(4px);
}

.wish-status.completed {
  background: rgba(7, 193, 96, 0.1);
}

/* 添加图片加载动画 */
.wish-image image {
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 优化按钮动画 */
.action-btn {
  position: relative;
  overflow: hidden;
}

.action-btn::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.3s, height 0.3s;
}

.action-btn:active::after {
  width: 200rpx;
  height: 200rpx;
  opacity: 0;
}

/* 优化图标间距和对齐 */
.van-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 添加渐变背景动画 */
.bg-gradient {
  animation: gradientMove 8s ease infinite;
  background-size: 200% 200%;
}

@keyframes gradientMove {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.title-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.subtitle-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 8rpx;
}

.wish-title-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.wish-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.wish-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.empty-title,
.empty-desc {
  display: flex;
  align-items: center;
  gap: 12rpx;
  justify-content: center;
}

.popup-title-row,
.popup-subtitle-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* 愿望详情弹窗 */
.detail-popup {
  min-height: 65vh;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
}

.detail-header {
  padding: 40rpx 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(
    to right,
    rgba(255, 105, 180, 0.05),
    rgba(255, 182, 193, 0.05)
  );
}

.header-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.header-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 105, 180, 0.1);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;

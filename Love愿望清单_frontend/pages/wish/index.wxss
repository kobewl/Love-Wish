.wish-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: env(safe-area-inset-bottom);
}

.wish-list {
  position: relative;
  z-index: 2;
  padding: 30rpx;
  margin-top: 20rpx;
}

.empty-box {
  padding: 120rpx 0;
  text-align: center;
}

.empty-img {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--desc-color);
}

.wish-item {
  margin-bottom: 24rpx;
}

.wish-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.type-tag {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.type-tag.PRIVATE {
  background: rgba(255, 105, 180, 0.1);
  color: var(--primary-color);
}

.type-tag.SHARED {
  background: rgba(64, 158, 255, 0.1);
  color: #409eff;
}

.type-tag.SURPRISE {
  background: rgba(103, 194, 58, 0.1);
  color: #67c23a;
}

.status {
  font-size: 24rpx;
  color: var(--desc-color);
}

.date {
  font-size: 24rpx;
  color: var(--desc-color);
}

.wish-content {
  margin-bottom: 20rpx;
}

.wish-content .title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.wish-content .desc {
  font-size: 28rpx;
  color: var(--desc-color);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.progress-box {
  flex: 1;
  margin-right: 32rpx;
}

.progress-text {
  font-size: 24rpx;
  color: var(--desc-color);
  margin-bottom: 8rpx;
  display: block;
}

.progress-bar {
  height: 8rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  background: var(--primary-gradient);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.btn-sm {
  padding: 12rpx 32rpx;
  font-size: 24rpx;
}

.fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: var(--primary-gradient);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 105, 180, 0.3);
}

.bg-gradient {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 260rpx;
  background: linear-gradient(to bottom right, #ff69b4, #ffb6c1);
  z-index: 1;
}

.header {
  position: relative;
  z-index: 2;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.title-section {
  color: #fff;
}

.main-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.sub-title {
  font-size: 28rpx;
  opacity: 0.9;
}

.add-btn-wrapper {
  margin-top: 10rpx;
}

.add-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  transition: all 0.3s;
}

.add-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.wish-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.wish-card:active {
  transform: scale(0.98);
}

.wish-card.completed {
  opacity: 0.8;
}

.wish-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.wish-status {
  font-size: 24rpx;
  color: #ff69b4;
  background: rgba(255, 105, 180, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.wish-status.completed {
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
}

.wish-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.wish-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.wish-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.wish-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
}

.wish-time {
  font-size: 24rpx;
  color: #999;
}

.wish-actions {
  display: flex;
  gap: 30rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: #666;
  padding: 10rpx;
}

.action-btn.complete {
  color: #52c41a;
}

.action-btn.edit {
  color: #1890ff;
}

.action-btn.delete {
  color: #ff4d4f;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
}

.empty-image {
  width: 400rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: block;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  display: block;
}

.add-first-btn {
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  background: #ff69b4;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}

.add-first-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.popup-content {
  padding: 30rpx;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-content {
  margin-bottom: 40rpx;
}

.image-upload {
  margin-top: 30rpx;
}

.upload-label {
  font-size: 28rpx;
  color: #646566;
  margin-bottom: 20rpx;
  display: block;
}

.upload-content {
  background: #f7f8fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.image-preview {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.image-preview image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-image {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background: #fff;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  color: #999;
  font-size: 24rpx;
}

.popup-footer {
  display: flex;
  gap: 20rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

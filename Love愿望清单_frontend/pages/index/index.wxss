/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: 0.5px solid rgba(0, 0, 0, 0.1);
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.index-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 24rpx;
  padding-top: 0;
}

.bg-gradient {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: linear-gradient(135deg, #ff69b4, #ffb6c1);
  z-index: 1;
}

.bg-pattern {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.1;
  background-image: radial-gradient(circle at 1px 1px, #fff 1px, transparent 0);
  background-size: 20px 20px;
}

/* 卡片通用样式 */
.love-words-card,
.anniversary-card,
.wish-progress-card {
  position: relative;
  z-index: 2;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-header .title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.card-header .subtitle {
  font-size: 24rpx;
  color: #999;
}

.card-header .more {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.card-header .more text {
  margin-right: 8rpx;
}

/* 情话卡片样式 */
.love-words-card {
  margin-top: 120rpx;
}

.love-words-content {
  padding: 24rpx;
  background: #fff9fb;
  border-radius: 16rpx;
}

.love-words {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 纪念日列表样式 */
.anniversary-list {
  margin-top: 24rpx;
}

.anniversary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background: #fff9fb;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.anniversary-item:active {
  transform: scale(0.98);
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-type {
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #fff;
  margin-right: 16rpx;
}

.item-info {
  flex: 1;
}

.item-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.item-date {
  font-size: 24rpx;
  color: #999;
}

.days-count {
  font-size: 28rpx;
  color: #ff69b4;
  font-weight: 500;
}

.days-count.today {
  color: #52c41a;
}

.days-count.passed {
  color: #999;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-tip text {
  margin-top: 16rpx;
}

/* 愿望进度样式 */
.progress-content {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  padding: 24rpx;
  background: #fff9fb;
  border-radius: 16rpx;
}

.progress-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.progress-item .label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.progress-item .value {
  font-size: 36rpx;
  color: #ff69b4;
  font-weight: 600;
}

/* 情侣卡片 */
.couple-card {
  background: var(--primary-gradient);
  color: #fff;
}

.couple-info {
  padding: 20rpx 0;
}

.user-avatar-box {
  text-align: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

.nickname {
  font-size: 28rpx;
  margin-top: 12rpx;
  display: block;
}

.love-days {
  text-align: center;
}

.love-days .days {
  font-size: 48rpx;
  font-weight: bold;
}

.love-days .label {
  font-size: 24rpx;
  margin-top: 8rpx;
}

.no-match {
  padding: 40rpx 0;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.tips {
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

/* 情话卡片 */
.love-card {
  margin-top: 24rpx;
}

.from {
  font-size: 24rpx;
  color: var(--desc-color);
}

.love-content {
  font-size: 32rpx;
  line-height: 1.6;
  color: var(--text-color);
  text-align: center;
  padding: 20rpx 0;
}

/* 纪念日卡片 */
.anniversary-list {
  margin-top: 24rpx;
}

.anniversary-item {
  padding: 24rpx 0;
  border-bottom: 1px solid var(--border-color);
}

.anniversary-item:last-child {
  border-bottom: none;
}

.type-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-size: cover;
}

.type-icon.LOVE {
  background-image: url("data:image/png;base64,..."); /* 需要替换为实际图标 */
}

.type-icon.BIRTHDAY {
  background-image: url("data:image/png;base64,..."); /* 需要替换为实际图标 */
}

.info .name {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.info .date {
  font-size: 24rpx;
  color: var(--desc-color);
}

.days-left {
  text-align: right;
}

.days-left .num {
  font-size: 40rpx;
  color: var(--primary-color);
  font-weight: bold;
}

.days-left .unit {
  font-size: 24rpx;
  color: var(--desc-color);
  margin-left: 4rpx;
}

/* 愿望进度卡片 */
.progress-box {
  margin-top: 24rpx;
}

.progress-info {
  margin-bottom: 16rpx;
  font-size: 26rpx;
}

.progress-bar {
  height: 12rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  background: var(--primary-gradient);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-detail {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: var(--desc-color);
}

.more {
  font-size: 26rpx;
  color: var(--desc-color);
  display: flex;
  align-items: center;
}

.more van-icon {
  margin-left: 4rpx;
}

/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.index-container {
  padding: 24rpx;
  min-height: 100vh;
  background: var(--bg-color);
}

/* 情侣卡片 */
.couple-card {
  background: var(--primary-gradient);
  color: #fff;
}

.couple-info {
  padding: 20rpx 0;
}

.user-avatar-box {
  text-align: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

.nickname {
  font-size: 28rpx;
  margin-top: 12rpx;
  display: block;
}

.love-days {
  text-align: center;
}

.love-days .days {
  font-size: 48rpx;
  font-weight: bold;
}

.love-days .label {
  font-size: 24rpx;
  margin-top: 8rpx;
}

.no-match {
  padding: 40rpx 0;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.tips {
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

/* 情话卡片 */
.love-card {
  margin-top: 24rpx;
}

.card-header {
  margin-bottom: 24rpx;
}

.from {
  font-size: 24rpx;
  color: var(--desc-color);
}

.love-content {
  font-size: 32rpx;
  line-height: 1.6;
  color: var(--text-color);
  text-align: center;
  padding: 20rpx 0;
}

/* 纪念日卡片 */
.anniversary-list {
  margin-top: 24rpx;
}

.anniversary-item {
  padding: 24rpx 0;
  border-bottom: 1px solid var(--border-color);
}

.anniversary-item:last-child {
  border-bottom: none;
}

.type-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-size: cover;
}

.type-icon.LOVE {
  background-image: url('data:image/png;base64,...'); /* 需要替换为实际图标 */
}

.type-icon.BIRTHDAY {
  background-image: url('data:image/png;base64,...'); /* 需要替换为实际图标 */
}

.info .name {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.info .date {
  font-size: 24rpx;
  color: var(--desc-color);
}

.days-left {
  text-align: right;
}

.days-left .num {
  font-size: 40rpx;
  color: var(--primary-color);
  font-weight: bold;
}

.days-left .unit {
  font-size: 24rpx;
  color: var(--desc-color);
  margin-left: 4rpx;
}

/* 愿望进度卡片 */
.progress-box {
  margin-top: 24rpx;
}

.progress-info {
  margin-bottom: 16rpx;
  font-size: 26rpx;
}

.progress-bar {
  height: 12rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  background: var(--primary-gradient);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-detail {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: var(--desc-color);
}

.more {
  font-size: 26rpx;
  color: var(--desc-color);
  display: flex;
  align-items: center;
}

.more van-icon {
  margin-left: 4rpx;
}

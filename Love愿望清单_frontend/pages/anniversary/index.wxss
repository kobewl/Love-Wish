/* 页面容器 */
.anniversary-container {
  min-height: 100vh;
  background: #f8f8f8;
  position: relative;
}

/* 顶部背景 */
.bg-top {
  height: 240rpx;
  background: linear-gradient(to bottom, #ff69b4, #ffb6c1);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
}

/* 日历区域 */
.calendar-section {
  position: relative;
  z-index: 2;
  margin: 0 24rpx;
  margin-top: -120rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 日历组件样式 */
.calendar {
  --calendar-height: 600rpx;
  --calendar-background-color: #fff;
  --calendar-selected-day-background-color: #ff69b4;
  --calendar-range-edge-background-color: #ff69b4;
  --calendar-range-edge-color: #fff;
  --calendar-range-middle-background-color: #ffe4e1;
  --calendar-range-middle-color: #ff69b4;
}

/* 自定义日历样式 */
::-webkit-scrollbar {
  display: none;
}

.van-calendar__header {
  box-shadow: none !important;
}

.van-calendar__day {
  margin-bottom: 12rpx !important;
}

.anniversary-day {
  background: rgba(255, 105, 180, 0.1) !important;
  border-radius: 8rpx !important;
}

.anniversary-day .van-calendar__bottom-info {
  color: #ff69b4 !important;
  font-size: 20rpx !important;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.van-calendar__selected-day {
  background: #ff69b4 !important;
  border-radius: 8rpx !important;
}

/* 纪念日列表 */
.anniversary-list {
  position: relative;
  z-index: 2;
  margin: 24rpx;
  margin-top: 40rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.list-header .title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  position: relative;
}

.list-header .title::after {
  content: "";
  position: absolute;
  bottom: -8rpx;
  left: 0;
  width: 48rpx;
  height: 4rpx;
  background: #ff69b4;
  border-radius: 2rpx;
}

.add-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 105, 180, 0.2);
  transition: all 0.3s;
}

.add-btn:active {
  transform: scale(0.95);
}

/* 列表内容 */
.list-content {
  min-height: 400rpx;
}

.anniversary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
}

.item-hover {
  background: #f8f8f8;
  transform: scale(0.98);
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-type {
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
  margin-right: 20rpx;
}

.item-info {
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.item-date {
  font-size: 26rpx;
  color: #999;
}

.item-right {
  display: flex;
  align-items: center;
}

.days-text {
  font-size: 28rpx;
  color: #ff69b4;
  margin-right: 16rpx;
  font-weight: 500;
}

.days-text.today {
  color: #4caf50;
}

.days-text.passed {
  color: #999;
}

/* 空状态 */
.empty-container {
  padding: 80rpx 0;
  text-align: center;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  display: block;
  line-height: 1.6;
}

/* 弹窗样式 */
.popup-content {
  padding: 30rpx;
  min-height: 60vh;
  display: flex;
  flex-direction: column;
}

.popup-header {
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  padding: 20rpx 0 40rpx;
  border-bottom: 1rpx solid #eee;
}

.form-content {
  flex: 1;
  padding: 20rpx 0;
}

/* 修改van-field样式 */
.van-field__label {
  color: #333 !important;
  font-size: 28rpx !important;
}

.van-field__input {
  text-align: right !important;
  color: #666 !important;
  font-size: 28rpx !important;
}

/* 修改van-cell样式 */
.van-cell {
  padding: 24rpx 0 !important;
}

.van-cell__title {
  color: #333 !important;
  font-size: 28rpx !important;
}

.van-cell__value {
  color: #666 !important;
  font-size: 28rpx !important;
}

/* 底部按钮样式 */
.popup-footer {
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 8rpx;
  margin: 0 20rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #ff69b4;
  color: #fff;
}

/* 选择器样式 */
.van-picker {
  width: 100%;
}

.van-picker__toolbar {
  padding: 16rpx !important;
}

.van-picker__cancel,
.van-picker__confirm {
  font-size: 28rpx !important;
}

.van-picker__confirm {
  color: #ff69b4 !important;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

/* 详情内容 */
.detail-content {
  margin: 30rpx 0 40rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.04);
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-item .label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.detail-item .value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  max-width: 60%;
  text-align: right;
}

.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s;
}

.form-picker:active {
  background: #fff;
  border-color: #ff69b4;
}

.form-picker text {
  font-size: 28rpx;
  color: #333;
}

.form-picker .van-icon {
  color: #999;
  font-size: 28rpx;
}

/* 添加纪念日弹窗样式 */
.add-popup {
  background: #fff;
  min-height: 60vh;
  display: flex;
  flex-direction: column;
}

.add-popup-title {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.add-form {
  flex: 1;
  padding: 0 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  min-height: 100rpx;
  border-bottom: 1rpx solid #eee;
}

.form-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.form-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: left;
}

.add-popup-buttons {
  display: flex;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
  border-radius: 0;
}

.btn-cancel {
  background: #f5f5f5;
  color: #333;
}

.btn-confirm {
  background: #ff69b4;
  color: #fff;
}

/* 修改placeholder样式 */
.form-input::placeholder {
  color: #999;
}

/* 去除按钮默认样式 */
button {
  padding: 0;
  margin: 0;
  background: none;
  border: none;
  border-radius: 0;
}

button::after {
  border: none;
}

/* 页面容器 */
.anniversary-container {
  min-height: 100vh;
  background: #f8f8f8;
  position: relative;
}

/* 顶部背景 */
.bg-top {
  height: 240rpx;
  background: linear-gradient(to bottom, #ff69b4, #ffb6c1);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
}

/* 日历区域 */
.calendar-section {
  position: relative;
  z-index: 2;
  margin: 0 24rpx;
  margin-top: -120rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 日历组件样式 */
.calendar {
  --calendar-height: 600rpx;
  --calendar-background-color: #fff;
  --calendar-selected-day-background-color: #ff69b4;
  --calendar-range-edge-background-color: #ff69b4;
  --calendar-range-edge-color: #fff;
  --calendar-range-middle-background-color: #ffe4e1;
  --calendar-range-middle-color: #ff69b4;
}

/* 自定义日历样式 */
::-webkit-scrollbar {
  display: none;
}

.van-calendar__header {
  box-shadow: none !important;
}

.van-calendar__day {
  margin-bottom: 12rpx !important;
}

.anniversary-day {
  background: rgba(255, 105, 180, 0.1) !important;
  border-radius: 8rpx !important;
}

.anniversary-day .van-calendar__bottom-info {
  color: #ff69b4 !important;
  font-size: 20rpx !important;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.van-calendar__selected-day {
  background: #ff69b4 !important;
  border-radius: 8rpx !important;
}

/* 纪念日列表 */
.anniversary-list {
  position: relative;
  z-index: 2;
  margin: 24rpx;
  margin-top: 40rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.header-left {
  display: flex;
  flex-direction: column;
}

.header-left .title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.header-left .subtitle {
  font-size: 24rpx;
  color: #999;
}

.add-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 105, 180, 0.1);
  border-radius: 50%;
  transition: all 0.3s;
}

.add-btn:active {
  transform: scale(0.95);
  background: rgba(255, 105, 180, 0.2);
}

/* 列表内容 */
.list-content {
  min-height: 400rpx;
}

.anniversary-item {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.item-hover {
  background: #f8f8f8;
  transform: scale(0.98);
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-type {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
}

.item-info {
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.item-date {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.item-right {
  display: flex;
  align-items: center;
}

.days-text {
  font-size: 28rpx;
  color: #ff69b4;
  margin-right: 16rpx;
  font-weight: 500;
}

.days-text.today {
  color: #4caf50;
}

.days-text.passed {
  color: #999;
}

/* 空状态 */
.empty-container {
  padding: 80rpx 0;
  text-align: center;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  display: block;
  line-height: 1.6;
}

/* 弹窗页面样式 */
.popup-page {
  min-height: 85vh;
  display: flex;
  flex-direction: column;
  background: #f7f8fa;
}

.popup-header {
  position: relative;
  text-align: center;
  padding: 32rpx;
  font-size: 32rpx;
  color: #333;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.popup-content {
  flex: 1;
  padding: 32rpx 0;
  overflow-y: auto;
}

.form-group {
  background: #fff;
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  color: #333;
  font-size: 28rpx;
}

.form-input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #333;
}

.form-input::placeholder {
  color: #999;
}

.form-value {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #666;
  font-size: 28rpx;
}

.detail-value {
  color: #666;
  font-size: 28rpx;
}

.popup-footer {
  padding: 32rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  gap: 24rpx;
}

.btn-cancel,
.btn-confirm,
.btn-delete,
.btn-edit {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 0;
}

.btn-cancel {
  background: #f5f5f5;
  color: #333;
}

.btn-confirm {
  background: #ff69b4;
  color: #fff;
}

.btn-delete {
  background: #fff;
  color: #ff4d4f;
  border: none;
}

.btn-edit {
  background: #ff69b4;
  color: #fff;
}

/* 选择器样式优化 */
.van-picker {
  background: #fff !important;
}

.van-picker__toolbar {
  border-bottom: 1rpx solid #eee !important;
}

.van-picker__cancel,
.van-picker__confirm {
  font-size: 32rpx !important;
  padding: 0 32rpx !important;
}

.van-picker__confirm {
  color: #ff69b4 !important;
}

.van-picker__cancel {
  color: #666 !important;
}

/* 动画优化 */
.popup-page {
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

/* 详情内容 */
.detail-content {
  margin: 30rpx 0 40rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
}

.detail-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-item .label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.detail-item .value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  max-width: 60%;
  text-align: right;
}

.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s;
}

.form-picker:active {
  background: #fff;
  border-color: #ff69b4;
}

.form-picker text {
  font-size: 28rpx;
  color: #333;
}

.form-picker .van-icon {
  color: #999;
  font-size: 28rpx;
}

/* 添加纪念日弹窗样式 */
.add-popup {
  background: #fff;
  min-height: 60vh;
  display: flex;
  flex-direction: column;
}

.add-popup-title,
.detail-popup-title {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.add-form {
  flex: 1;
  padding: 0 30rpx;
}

.form-item {
  position: relative;
  padding: 24rpx 0;
}

.form-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.form-value {
  flex: 1;
  padding-right: 40rpx;
}

.add-popup-buttons {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
  border-top: 1rpx solid #eee;
}

.btn-cancel,
.btn-confirm,
.btn-delete,
.btn-edit {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 88rpx;
  font-size: 32rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: linear-gradient(to right, #ff69b4, #ff8dc7);
  color: #fff;
}

.btn-delete {
  background: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
}

.btn-edit {
  background: #ff69b4;
  color: #fff;
}

.btn-cancel:active,
.btn-confirm:active,
.btn-delete:active,
.btn-edit:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 修改placeholder样式 */
.form-input::placeholder {
  color: #999;
}

/* 去除按钮默认样式 */
button {
  padding: 0;
  margin: 0;
  background: none;
  border: none;
  border-radius: 0;
}

button::after {
  border: none;
}

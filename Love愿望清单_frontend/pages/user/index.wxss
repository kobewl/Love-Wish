/* 页面容器 */
.user-container {
  min-height: 100vh;
  background: #f7f7f7;
  position: relative;
}

/* 顶部背景 */
.bg-top {
  height: 400rpx;
  width: 100%;
  position: relative;
  overflow: hidden;
}

.bg-image {
  width: 100%;
  height: 100%;
  filter: blur(2px);
}

/* 用户信息卡片 */
.user-card {
  position: absolute;
  top: 200rpx;
  left: 30rpx;
  right: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-right {
  margin-left: 30rpx;
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.pair-status,
.pair-code {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #ff69b4;
}

.pair-icon,
.copy-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 功能列表 */
.function-list {
  margin: 180rpx 30rpx 30rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 0 30rpx;
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.function-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
}

.item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

/* 设置列表 */
.setting-list {
  margin: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 0 30rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.theme-preview {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}

/* 退出登录按钮 */
.logout-btn {
  margin: 60rpx 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #fff;
  border-radius: 44rpx;
  color: #ff4d4f;
  font-size: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.logout-btn:active {
  transform: scale(0.98);
  background: #fafafa;
}

/* 主题选择器 */
.theme-selector {
  padding: 40rpx;
}

.theme-title {
  text-align: center;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 40rpx;
}

.theme-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.theme-item {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin: 20rpx;
  position: relative;
}

.theme-item.active {
  border: 4rpx solid #fff;
  box-shadow: 0 0 0 4rpx #ff69b4;
}

.theme-check {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

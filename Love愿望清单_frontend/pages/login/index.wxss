/* 登录页面样式 */
.login-container {
  min-height: 100vh;
  padding: 60rpx 40rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Logo区域 */
.logo {
  margin-top: 120rpx;
  text-align: center;
}

.logo image {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
}

.logo .title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

/* 登录按钮区域 */
.login-btn-area {
  width: 100%;
  margin-top: 120rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  border: none;
}

.login-btn image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.login-btn::after {
  border: none;
}

/* 协议区域 */
.agreement {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #666;
}

.agreement-text {
  display: inline-flex;
  align-items: center;
}

.agreement .link {
  color: #07c160;
  display: inline;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  display: block;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--desc-color);
}

.form-box {
  padding: 40rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.05);
}

.switch-type {
  text-align: right;
  font-size: 26rpx;
  color: var(--primary-color);
  padding: 20rpx 0;
}

.link {
  color: var(--primary-color);
  display: inline;
}

.btn-area {
  margin-top: 40rpx;
}

.btn {
  background: var(--primary-gradient);
  color: #fff;
  border: none;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.btn::after {
  border: none;
}
